                "required":true
        },
        "vecino":{
            "type":"Schema.ObjectId",
            "ref":"vecino",
            "required":true
        }
    },
    "mensaje":{
        "destinatario":{
            "type":["Schema.ObjectId"],
            "ref":"vecino",
            "required":true
        },
        "remitente":{
            "type":"Schema.ObjectId",
            "ref":"administrador",
            "required":true
        },
        "fecha":{
            "type":"Date",
            "required":true
        },
        "hora":{
            "type":"String",
            "required":true
        },
        "contenido":{
            "type":"String",
            "required":true
        }
